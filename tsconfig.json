{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "es2015", "es2017"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"]
    }
  },
  "include": ["src", ".storybook"],
  "exclude": ["node_modules", "dist"]
}
